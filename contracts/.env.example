# Polygon Amoy Testnet Configuration
POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# Polygon Mainnet Configuration (for production)
POLYGON_MAINNET_RPC_URL=

# Deployer Wallet Private Key (REQUIRED for deployment)
# ⚠️  SECURITY WARNING: Never commit this file with a real private key!
# Private key must be 64 hex characters (32 bytes), without 0x prefix
# Example: 1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
PRIVATE_KEY=your_private_key_here

# Etherscan API Key (V2 Multichain API - works for all networks)
# Get your API key from: https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Optional: PolygonScan API Key (alternative to ETHERSCAN_API_KEY)
POLYGONSCAN_API_KEY=

# Optional: Gas Reporting
REPORT_GAS=false
COINMARKETCAP_API_KEY=

# Optional: Contract Addresses (set after deployment)
DONATION_REGISTRY_ADDRESS=
CHARITY_VERIFICATION_ADDRESS=
IMPACT_ESCROW_ADDRESS=
VERIFICATION_ORACLE_ADDRESS=
