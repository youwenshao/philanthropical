# WalletConnect Configuration
# Get your project ID from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Polygon Amoy Testnet RPC URL (optional, defaults to public RPC)
NEXT_PUBLIC_POLYGON_AMOY_RPC_URL=https://rpc-amoy.polygon.technology

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Contract Addresses (set after deploying contracts)
NEXT_PUBLIC_DONATION_REGISTRY_ADDRESS=
NEXT_PUBLIC_CHARITY_VERIFICATION_ADDRESS=
NEXT_PUBLIC_IMPACT_ESCROW_ADDRESS=
NEXT_PUBLIC_VERIFICATION_ORACLE_ADDRESS=

# USDC Token Address (Polygon Amoy testnet)
# For testnet, you may need to deploy a mock USDC or use a test token
NEXT_PUBLIC_USDC_ADDRESS=

# Admin Configuration
# Comma-separated list of admin wallet addresses
NEXT_PUBLIC_ADMIN_ADDRESSES=

# Application URL (for CORS)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# IPFS/Pinata Configuration (for storing evidence/verification documents)
# Get your JWT from: https://app.pinata.cloud/developers/api-keys
PINATA_JWT=your_pinata_jwt_token

# Onramp Services (optional - for fiat-to-crypto conversion)
# Ramp Network: https://ramp.network/developers
NEXT_PUBLIC_RAMP_API_KEY=
RAMP_API_KEY=

# MoonPay: https://www.moonpay.com/developers
NEXT_PUBLIC_MOONPAY_API_KEY=
MOONPAY_API_KEY=
